<Page x:Class="KioskHub.Wpf.Views.KioskRegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KioskHub.Wpf.Views"
      xmlns:vm="clr-namespace:KioskHub.Wpf.ViewModels"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="KioskRegistrationPage">
    <Page.DataContext>
        <vm:KioskRegistrationPageViewModel/>
    </Page.DataContext>

    <StackPanel>
        <TextBlock Text="KIOSK アプリのパス"/>
        <TextBox Text="{Binding KioskAppPath.Value}"/>
        <Border Height="20"/>
        <Button Content="起動"
                Command="{Binding KioskOnCommand}"/>
    </StackPanel>
</Page>
